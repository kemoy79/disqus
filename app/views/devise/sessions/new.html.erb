<h2>Log In</h2>



<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "text-center border border-light p-5") do |f| %>
 
    <%= f.email_field :email, autofocus: true, class: "form-control mb-4", placeholder: "Email", autocomplete: "email" %>

    <%= f.password_field :password, class: "form-control mb-4", placeholder: "Password", autocomplete: "current-password" %>


  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-info btn-block my-4"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
