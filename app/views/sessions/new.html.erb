<br>
    <div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h4>
                        <i class="fas fa-user-plus"></i> Login</h4>
                </div>
                <div class="card-body">

                    <%= form_with(scope: :session, url: login_path, class: "border border-light p-5", local: true ) do |form| %>

                    <div class="form-row mb-12">


                        <div class="col-6">
                            <%= form.text_field :eamil, class: "form-control", placeholder: "Enter Email"  %>
                        </div>
                        <div class="col-6">
                            <%= form.password_field :password, class: "form-control", placeholder: "Enter Password"  %>
                        </div>
                    </div>
                    <div class="form-row">

                        <div class="col">

                            <%= form.submit "Log In", class: "btn btn-info my-4 btn-block" %>
                        </div>
                    </div>

                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
