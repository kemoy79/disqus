<div class="row d-flex justify-content-center">
  <div class="col-lg-10 text-center">
  <div class="card mx-auto">

    <h3 class="card-header bg-primary text-white text-center">New Post</h3>
    <% if @post.errors.any?%>
    <h3>The follwoing prevented submission!</h3>
    <% @post.errors.full_messages.each do |msg| %>
    <ul>
      <li><%= msg %></li>
    </ul>
    <% end %>
    <% end %>
    <!-- Default form contact -->


    <%= form_with(model: @post, class: "border border-light p-5", local: true ) do |form| %>


    <!-- Title -->
    <%= form.text_field :title, class: "form-control mb-4", placeholder: "Title"   %>

    <!-- Category -->
    <label>Category</label>
    <%= form.select(:category_id, [],{}, {:class => "browser-default custom-select"}) do %>
    <% Category.all.each do |category| %>
    <%= content_tag(:option, category.name, value:category.id ) %>
    <% end %>
    <% end %>

    <br><br>
    <!-- Body -->
    <div class="form-group">
      <%= form.rich_text_area :body, style: "overflow-y: scroll; height: 200px;" %>
    </div>

    <!-- Send button -->
    <%= form.submit "Create", class: "btn btn-success btn-block", disable_with: 'Createing...' %>
    <%= link_to 'Back', posts_path, class: "btn btn-warning" %>

    <% end %>
    <!-- Default form contact -->

  </div>
  </div>
  </div>
</div>