<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>
                        <i class="fas fa-user-plus"></i> Register</h4>
                </div>
                <div class="card-body">

                    <% if @user.errors.any?%>
                      <h3>The follwoing prevented submission!</h3>
                      <% @user.errors.full_messages.each do |msg| %>
                        <ul>
                            <li><%= msg %></li>
                        </ul>
                      <% end %>
                    <% end %>
                    <%= form_with(model: @user, class: "border border-light p-5", local: true ) do |form| %>


                    <div class="form-row mb-12">

                        <div class="col-6">
                            <!-- First name -->
                            <%= form.text_field :first_name, class: "form-control", placeholder: "First Name"  %>

                        </div>
                        <div class="col-6">
                            <!-- Last name -->
                            <%= form.text_field :last_name, class: "form-control", placeholder: "Last Name"  %>
                        </div>

                    </div>

                    <div class="form-row mb-12">


                        <div class="col-6">
                            <%= form.text_field :eamil, class: "form-control", placeholder: "Email"  %>
                        </div>
                        <div class="col-6">
                            <%= form.password_field :password, class: "form-control", placeholder: "Password"  %>
                        </div>
                    </div>
                    <div class="form-row">

                        <div class="col">

                            <%= form.submit "Sign Up", class: "btn btn-info my-4 btn-block" %>
                        </div>
                    </div>

                    <% end %>

                    <%# <div class="form-group">
                        <label for="first_name">First Name</label>
